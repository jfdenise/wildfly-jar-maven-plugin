<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.wildfly.plugins</groupId>
        <artifactId>wildfly-jar-examples-parent</artifactId>
        <version>4.0.0.Beta1-SNAPSHOT</version>
    </parent>

    <artifactId>jaxrs</artifactId>
    <packaging>war</packaging>

    <name>WildFly Bootable JAR - JAX-RS Example</name>
    <description>An example of how to use JAX-RS resources</description>

    <dependencies>
        <dependency>
            <groupId>jakarta.platform</groupId>
            <artifactId>jakarta.jakartaee-api</artifactId>
            <scope>provided</scope>
        </dependency>

        <!-- Server dependencies we want to override -->
        <!-- The Bom has been set in dependenciesManagement of parent pom.xml --> 
        <dependency>
            <groupId>io.undertow</groupId>
            <artifactId>undertow-core</artifactId>
            <scope>provided</scope>
        </dependency>
        <!-- EAP upgrade is done thanks to dependency upgrade. -->
        <dependency>
            <groupId>org.wildfly</groupId>
            <artifactId>wildfly-ee-galleon-pack</artifactId>
            <!-- for now BOM doesn't contain EAP feature-pack -->
            <version>7.4.1.Final-redhat-00001</version>
            <scope>provided</scope>
            <!-- zip is mandatory for feature-pack -->
            <type>zip</type>
        </dependency>
        
        <!-- XP galleon-feature-pack we depend on -->
        <dependency>
            <groupId>org.wildfly</groupId>
            <artifactId>wildfly-galleon-pack</artifactId>
            <!-- for now BOM doesn't contain XP feature-pack -->
            <version>3.0.0.GA-redhat-00001-Final</version>
            <scope>provided</scope>
            <!-- zip is mandatory for feature-pack -->
            <type>zip</type>
        </dependency>
    </dependencies>

    <build>
        <finalName>${project.artifactId}</finalName>
        <plugins>
            <plugin>
                <groupId>org.wildfly.plugins</groupId>
                <artifactId>wildfly-jar-maven-plugin</artifactId>
                <configuration>
                    <feature-packs>
                        <feature-pack>
                            <!-- This is the XP feature-pack used to build the bootable JAR -->
                            <!-- version is retrieved from dependencies -->
                            <groupId>org.wildfly</groupId>
                            <artifactId>wildfly-galleon-pack</artifactId>
                        </feature-pack>
                    </feature-packs>
                    <layers>
                        <layer>jaxrs</layer>
                        <layer>management</layer>
                    </layers>
                    <!-- We list the set of dependencies that impact the server, we are on the safe side so explictly list them -->
                    <dependencies>
                        <dependency>
                            <groupId>io.undertow</groupId>
                            <artifactId>undertow-core</artifactId>
                        </dependency>
                        <dependency>
                            <groupId>org.wildfly</groupId>
                            <artifactId>wildfly-ee-galleon-pack</artifactId>
                        </dependency>
                    </dependencies>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>package</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
